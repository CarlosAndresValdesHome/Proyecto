<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header"><h1>Detalle</h1></div>
    <div class="card-body">
    <div class="form-group">
        <div class="form-row">
          <div class="col-md-12">
          <table class="table table-bordered">
              <thead>
                <tr>
                  <th><strong>Id:</strong></th>
                  <th><strong>Nombre:</strong></th>
                  <th><strong>Apellido:</strong></th>
                  <th><strong>Direccion:</strong></th>
                  <th><strong>Telefono:</strong></th>
                  <th><strong>Email:</strong></th>
                  <th><strong>Id Empresa:</strong></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= @user_modified.id_empresa %></td>
                  <td><%= @user_modified.id %></td>
                  <td><%= @user_modified.nombre %></td>
                  <td><%= @user_modified.apellido %></td>
                  <td><%= @user_modified.direccion %></td>
                  <td><%= @user_modified.telefono %></td>
                  <td><%= @user_modified.email %></td>
                </tr>  
                </tbody>
                <thead>
                  <tr>
                    <th><strong>Id Perfil:</strong></th>
                    <th><strong>Id Perfil Cargo:</strong></th>
                    <th><strong>Id Nómina:</strong></th>
                    <th><strong>Pregunta Secreta:</strong></th>
                    <th><strong>Contraseña:</strong></th>
                    <th><strong>Id Contrato:</strong></th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%= @user_modified.id_perfi %></td>
                    <td><%= @user_modified.id_perfil_cargo %></td>
                    <td><%= @user_modified.id_nomina %></td>
                    <td><%= @user_modified.preguntaSecreta %></td>
                    <td><%= @user_modified.contraseña %></td>
                    <td><%= @user_modified.id_contrato %></td>
                  </tr>
                </tbody>
              </table>
          </div>
        </div>
      </div>
          <div class="form-group">
            <div class="form-row">
              <div class="col-md-12">
                <center><%= link_to 'Editar', edit_user_modified_path(@user_modified),{ class: "btn btn-info btn-sm" } %>
                <%= link_to 'Volver', user_modifieds_path,{ class: "btn btn-info btn-sm" } %></center>
              </div>
            </div> 
          </div>
    </div>
  </div> 
</div>



                