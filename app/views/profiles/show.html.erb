<p id="notice"><%= notice %></p>
<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header"><h1>Detalle</h1></div>
    <div class="card-body">
    <div class="form-group">
        <div class="form-row">
          <div class="col-md-4">
            <strong>Id:</strong>
            <%= @profile.id %>
          </div>
          <div class="col-md-4">
            <strong>Descripcion:</strong>
            <%= @profile.descripcion %>
          </div>
          <div class="col-md-4">
            <strong>Id Usuario:</strong>
            <%= @profile.id_usuario %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-6">
            <%= link_to 'Editar', edit_profile_path(@profile),{ class: "btn btn-info btn-sm" } %>
            <%= link_to 'Volver', profiles_path,{ class: "btn btn-info btn-sm" } %>
          </div>
        </div> 
      </div>
    </div>
  </div> 
</div>
