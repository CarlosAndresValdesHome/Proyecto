<p id="notice"><%= notice %></p>
<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header"><h1>Detalle</h1></div>
    <div class="card-body">
    <div class="form-group">
        <div class="form-row">
          <div class="col-md-12">
          <table class="table table-bordered">
              <thead>
                <tr>
                  <th><strong>Id:</strong></th>
                  <th><strong>Descripcion:</strong></th>
                  <th><strong>Id Usuario:</strong></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= @profile.id %></td>
                  <td><%= @profile.descripcion %></td>
                  <td><%= @profile.id_usuario %></td>
                </tr>
                </tbody>
              </table>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-12">
            <center><%= link_to 'Editar', edit_profile_path(@profile),{ class: "btn btn-info btn-sm" } %>
            <%= link_to 'Volver', profiles_path,{ class: "btn btn-info btn-sm" } %></center>
          </div>
        </div> 
      </div>
    </div>
  </div> 
</div>
