<p id="notice"><%= notice %></p>
<div class="container">
<div class="card mx-auto mt-5">
    <div class="card-header"><h1>Compañías</h1></div>
    <div class="card-body">
<div class="form-group">
  <div class="form-row">
    <div class="col-md-12">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Dirección</th>
      <th>Teléfono</th>
      <th>Email</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.nombre %></td>
        <td><%= company.direccion %></td>
        <td><%= company.telefono %></td>
        <td><%= company.email %></td>
        <td><%= link_to 'Ver', company,{ class: "btn btn-info btn-sm" } %></td>
        <td><%= link_to 'Editar', edit_company_path(company),{ class: "btn btn-success btn-sm" } %></td>
        <td><%= link_to 'Eliminar', company, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Está Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-group">
 <div class="form-row">
  <div class="col-md-12">
    <center><%= link_to 'Nueva Compañía', new_company_path,{ class: "btn btn-warning btn-sm" } %></center>
  </div>
 </div>
</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>