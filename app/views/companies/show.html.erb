<p id="notice"><%= notice %></p>
<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header"><h1>Detalle</h1></div>
      <div class="card-body">
        <div class="form-group">
          <div class="form-row">
            <div class="col-md-2">
              <strong>Id:</strong>
              <%= @company.id %>
            </div>
            <div class="col-md-2">
              <strong>Nombre:</strong>
              <%= @company.nombre %>
            </div>
            <div class="col-md-2">
              <strong>Dirección:</strong>
              <%= @company.direccion %>
            </div>
            <div class="col-md-2">
              <strong>Teléfono:</strong>
              <%= @company.telefono %>
            </div>
            <div class="col-md-2">
              <strong>Email:</strong>
              <%= @company.email %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="form-row">
            <div class="col-md-12">
             <center><%= link_to 'Editar', edit_company_path(@company),{ class: "btn btn-info btn-sm" } %>
             <%= link_to 'Volver', companies_path,{ class: "btn btn-info btn-sm" } %></center>
            </div>
          </div> 
        </div>
      </div>
  </div> 
</div>