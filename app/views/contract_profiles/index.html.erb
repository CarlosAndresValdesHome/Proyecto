<p id="notice"><%= notice %></p>
<div class="container">
  <div class="card mx-auto mt-5">
    <div class="card-header"><h1>Tipos de Contrato</h1></div>
    <div class="card-body">
<div class="form-group">
  <div class="form-row">
    <div class="col-md-12">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Descripción</th>
      <th>Id Contratos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contract_profiles.each do |contract_profile| %>
      <tr>
        <td><%= contract_profile.id %></td>
        <td><%= contract_profile.descripcion %></td>
        <td><%= contract_profile.id_contratos %></td>
        <td><%= link_to 'Ver', contract_profile,{ class: "btn btn-info btn-sm" } %></td>
        <td><%= link_to 'Editar', edit_contract_profile_path(contract_profile),{ class: "btn btn-success btn-sm" } %></td>
        <td><%= link_to 'Eliminar', contract_profile, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Está Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-group">
 <div class="form-row">
  <div class="col-md-12">
    <center><%= link_to 'Nuevo Tipo de Contrato', new_contract_profile_path,{ class: "btn btn-warning btn-sm" } %></center>
  </div>
 </div>
</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
